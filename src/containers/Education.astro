---
import Section from "./Section.astro";

import { getLangFromUrl, useGetInfo } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const info = useGetInfo(lang);

const { education, defaultEndDate } = info;
---

<Section title="EducaciÃ³n">
  <ul class="flex flex-col gap-8">
    {
      education.map(({ institution, startDate, endDate, area }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear =
          endDate != null ? new Date(endDate).getFullYear() : defaultEndDate;
        const years = `${startYear} - ${endYear}`;

        return (
          <li>
            <article>
              <header class="flex justify-between items-start mb-1">
                <div>
                  <h3 class="font-medium text-gray-950">{institution}</h3>
                </div>

                <time class="text-right text-sm text-gray-700 min-w-24">
                  {years}
                </time>
              </header>

              <footer>
                <p>{area}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>
