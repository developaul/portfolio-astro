---
import Layout from "@layouts/Layout.astro";
import Hero from "@containers/Hero.astro";
import About from "@containers/About.astro";
import Experience from "@containers/Experience.astro";
import Education from "@containers/Education.astro";
import Projects from "@containers/Projects.astro";
import Skills from "@containers/Skills.astro";

import { getLangFromUrl, useGetInfo } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const info = useGetInfo(lang);

const { name, label } = info.basics;
---

<Layout title={`Portfolio of ${name} - ${label}`}>
  <main>
    <Hero />
    <About />
    <Experience />
    <Education />
    <Projects />
    <Skills />
  </main>
</Layout>
